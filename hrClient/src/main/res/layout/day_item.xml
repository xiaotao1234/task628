<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recorder_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@drawable/buttton_change_bg"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent">
        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#44000000"-->
        <!--android:layout_marginStart="29sp"/>-->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_gravity="center"
            android:src="@drawable/circle_bg_month" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="bottom"
            android:background="#08000000" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:id="@+id/tvInfo_day"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:hint="11"
                android:text="2019-8-8"
                android:textSize="@dimen/dp_11"
                android:transitionName="shareimage" />
            <TextView
                android:id="@+id/device_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_9"
                android:hint="ddad"
                android:textColor="#99FFFFFF"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_30"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#33FFFFFF" />
    </RelativeLayout>
</LinearLayout>