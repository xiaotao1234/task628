<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/dp_20"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/window_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="新建文件夹"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_11" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <TextView
        android:id="@+id/progress_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="#44AA99"
        android:textSize="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_gravity="end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/button_bg_unsliod"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/super_change"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/button_bg_window"
            android:gravity="center"
            android:text="管理员"
            android:textSize="@dimen/dp_9" />

        <TextView
            android:id="@+id/normal_change"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="普通用户"
            android:textSize="@dimen/dp_9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok_button"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="确定"
            android:textColor="#00CC55"
            android:textSize="@dimen/dp_11" />

        <View
            android:layout_width="@dimen/dp_20"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="取消"
            android:textColor="#00CC55"
            android:textSize="@dimen/dp_11" />
    </LinearLayout>

</LinearLayout>