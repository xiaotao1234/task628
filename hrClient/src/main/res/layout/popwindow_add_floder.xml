<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/window_bg_black"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="新建文件夹"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_weight="1"
        android:textColorHint="#60000000"
        app:hintTextAppearance="@style/TextInputAppTheme">

        <EditText
            android:id="@+id/user_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:hint="文件夹名:"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dp_11" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_25"
        android:orientation="horizontal"
        android:background="@drawable/button_bg_unsliod">
        <TextView
            android:id="@+id/super_change"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:text="管理员"
            android:background="@drawable/button_bg_window"
            android:textSize="@dimen/dp_9"
            android:gravity="center"/>
        <TextView
            android:id="@+id/normal_change"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:text="普通用户"
            android:textSize="@dimen/dp_9"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/add_button"
        android:text="新建"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_5"/>
</LinearLayout>