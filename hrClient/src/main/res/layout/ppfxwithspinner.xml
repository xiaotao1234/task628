<?xml version="1.0" encoding="utf-8"?>
<com.huari.ui.ItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/exchilditemttv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:hint="1"
        android:textColor="#000000"
        android:textSize="@dimen/dp_12" />"

    <Spinner
        android:id="@+id/exchildsp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0.3"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:background="#00FFFFFF"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:popupBackground="@color/pinpufenxishezhispinnerdrop"
        android:spinnerMode="dropdown" />
</com.huari.ui.ItemView>
