<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal" >
        <TextView android:id="@+id/groupnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/noman2"
            />
        <TextView android:id="@+id/groupname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/noman4"
            />
        <TextView android:id="@+id/stationservername"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@color/noman1"
            />
        <ImageView android:id="@+id/stationimageview"
            android:background="@color/nomanimagecolor"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"/>
</LinearLayout>
